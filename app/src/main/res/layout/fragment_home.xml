<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- Center container for both CardView and Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="40dp">

        <!-- KO-POINTS card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/darkBlue"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/ko_points_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="KO-POINTS"
                    android:textColor="@color/orange"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <!-- Dynamic Text -->
                <TextView
                    android:id="@+id/ko_points_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/orange"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Buttons below the card -->
        <Button
            android:id="@+id/make_donation_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="@color/orange"
            android:text="Make Donation"
            android:textColor="@color/darkBlue"
            android:textSize="20sp" />

        <Button
            android:id="@+id/donation_category_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/orange"
            android:text="Donation Categories"
            android:textColor="@color/darkBlue"
            android:textSize="20sp" />
    </LinearLayout>

</FrameLayout>
